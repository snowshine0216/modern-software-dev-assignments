    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "OLLAMA_HOST": "http://10.23.38.9:11434"
            }
        },
        {
            "name": "Python Debugger: FastAPI (Week 2)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "week2.app.main:app",
                "--reload"
            ],
            "jinja": true,
            "console": "integratedTerminal",
            "env": {
                "OLLAMA_HOST": "http://10.23.38.9:11434"
            }
        }
    ]
}